<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sort"
            android:fontFamily="@font/sf_pro_display_bold"
            android:textSize="25sp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sort_pok_mons_alphabetically_or_by_national_pok_dex_number"
            android:fontFamily="@font/sf_pro_display_regular" />

        <Button
            android:id="@+id/btn_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Smallest number first"
            android:textAllCaps="false"
            android:backgroundTint="@color/gray" />

        <Button
            android:id="@+id/btn_high"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Highest number first number first"
            android:textAllCaps="false"
            android:backgroundTint="@color/gray" />

        <Button
            android:id="@+id/btn_a_z"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A-Z"
            android:textAllCaps="false"
            android:backgroundTint="@color/gray" />

        <Button
            android:id="@+id/btn_z_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Z-A"
            android:textAllCaps="false"
            android:backgroundTint="@color/gray" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
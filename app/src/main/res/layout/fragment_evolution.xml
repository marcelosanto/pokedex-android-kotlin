<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fragment_rounded_shape"
    tools:context=".view.EvolutionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display_bold"
            android:textSize="20sp"
            android:text="Evolution Chart" />


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgEvoOne"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/bulbasaur" />

                <TextView
                    android:id="@+id/txtIdEvoOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:text="#001" />

                <TextView
                    android:id="@+id/txtNameEvoOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_bold"
                    android:textSize="20sp"
                    android:text="Bulbasaur" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtEvoOneMinLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_bold"
                android:text="(Level 16)"
                android:textAlignment="center"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_baseline_arrow_forward_24" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgEvoTwo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/bulbasaur" />

                <TextView
                    android:id="@+id/txtIdEvoTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:text="#001" />

                <TextView
                    android:id="@+id/txtNameEvoTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_bold"
                    android:textSize="20sp"
                    android:text="Bulbasaur" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgEvoTwos"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/bulbasaur" />

                <TextView
                    android:id="@+id/txtIdEvoTwos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:text="#001" />

                <TextView
                    android:id="@+id/txtNameEvoTwos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_bold"
                    android:textSize="20sp"
                    android:text="Bulbasaur" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtEvoThirdMinLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_bold"
                android:text="(Level 16)"
                android:textAlignment="center"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_baseline_arrow_forward_24" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgEvoThird"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/bulbasaur" />

                <TextView
                    android:id="@+id/txtIdEvoThird"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:text="#001" />

                <TextView
                    android:id="@+id/txtNameEvoThird"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_bold"
                    android:textSize="20sp"
                    android:text="Bulbasaur" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fragment_rounded_shape"
    tools:context=".view.EvolutionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtEvolution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display_bold"
            android:text="Evolution Chart"
            android:textSize="20sp" />


        <LinearLayout
            android:id="@+id/layoutPokemonNotEvolution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imgPokemonNotEvolution"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="@drawable/ic_pokeball"
                android:backgroundTint="#E8E8E8"
                android:src="@drawable/bulbasaur" />

            <TextView
                android:id="@+id/txtIdPokemonNotEvolution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_medium"
                android:text="#001" />

            <TextView
                android:id="@+id/txtNamePokemonNotEvolution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_bold"
                android:text="Bulbasaur"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/firstLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgEvoOne"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/ic_pokeball"
                    android:backgroundTint="#E8E8E8"
                    android:src="@drawable/bulbasaur" />

                <TextView
                    android:id="@+id/txtIdEvoOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:text="#001" />

                <TextView
                    android:id="@+id/txtNameEvoOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_bold"
                    android:text="Bulbasaur"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtEvoOneMinLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_baseline_arrow_forward_24"
                android:fontFamily="@font/sf_pro_display_bold"
                android:text="(Level 16)"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgEvoTwo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/ic_pokeball"
                    android:backgroundTint="#E8E8E8"
                    android:src="@drawable/bulbasaur" />

                <TextView
                    android:id="@+id/txtIdEvoTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:text="#001" />

                <TextView
                    android:id="@+id/txtNameEvoTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_bold"
                    android:text="Bulbasaur"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutThird"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgEvoTwos"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/ic_pokeball"
                    android:backgroundTint="#E8E8E8"
                    android:src="@drawable/bulbasaur" />

                <TextView
                    android:id="@+id/txtIdEvoTwos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:text="#001" />

                <TextView
                    android:id="@+id/txtNameEvoTwos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_bold"
                    android:text="Bulbasaur"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtEvoThirdMinLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_baseline_arrow_forward_24"
                android:fontFamily="@font/sf_pro_display_bold"
                android:text="(Level 16)"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgEvoThird"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/ic_pokeball"
                    android:backgroundTint="#E8E8E8"
                    android:src="@drawable/bulbasaur" />

                <TextView
                    android:id="@+id/txtIdEvoThird"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:text="#001" />

                <TextView
                    android:id="@+id/txtNameEvoThird"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_bold"
                    android:text="Bulbasaur"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>